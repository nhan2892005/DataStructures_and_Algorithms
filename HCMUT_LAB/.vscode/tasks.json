{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [                
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-g",
                "${fileDirname}/${fileBasename}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Remove Executable",
            "type": "shell",
            "command": "rm",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Check memory leaks",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "--log-file=${fileDirname}/valgrind-out.txt",
                "--quiet",
                "${fileDirname}/${fileBasenameNoExtension}","!demo"
            ],
        }
    ],
    "version": "2.0.0"
}

