{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [                
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-g",
                "${fileDirname}/${fileBasename}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Remove Executable",
            "type": "shell",
            "command": "rm",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
